<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <fragment xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frgListado"
        class="com.simarro.practica.aplicacion20.fragment.Activity_Fragment_Lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.50 "
        android:layout_gravity="left"
        tools:context=".principal.Activity_Principal">


    </fragment>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frgDetalle"
        class="com.simarro.practica.aplicacion20.fragment.Activity_Fragment_Detalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="0.5"
        tools:context=".principal.Activity_Principal">


    </fragment>
</LinearLayout>